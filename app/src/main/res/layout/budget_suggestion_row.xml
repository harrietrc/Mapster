<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/budget_col_suggestion_name"
        android:layout_width="wrap_content"
        android:textColor="#287AA9"
        android:ellipsize="end"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/budget_col_base_cost"
        android:paddingLeft="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/budget_col_total"
        android:paddingLeft="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/budget_col_user_value"
        android:paddingLeft="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"/>
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/budget_edit_description"
        android:id="@+id/budget_col_edit"/>
</LinearLayout>