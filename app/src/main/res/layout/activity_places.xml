<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/place_activity_layout"
    tools:context="com.mapster.activities.PlacesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/origin"
        android:text="Origin"
        android:textSize="10pt"
        android:textColor="#000000"/>
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autocomplete_origin"
        android:hint="Start Place"/>
    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Add Stop Point"-->
        <!--android:id="@+id/add_stop_point"-->
        <!--android:onClick="addStopPoint"/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Point 1"
        android:textSize="10pt"
        android:textColor="#000000"/>
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autocomplete_stop_point_1"
        android:hint="Stop Point 1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Point 2"
        android:textSize="10pt"
        android:textColor="#000000"/>
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autocomplete_stop_point_2"
        android:hint="Stop Point 2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Point 3"
        android:textSize="10pt"
        android:textColor="#000000"/>
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autocomplete_stop_point_3"
        android:hint="Stop Point 3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/destination"
        android:text="Destination"
        android:textSize="10pt"
        android:textColor="#000000"/>
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autocomplete_destination"
        android:hint="Your Destination"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/ok"
            android:layout_weight=".50"
            android:onClick="ok"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:id="@+id/clear"
            android:layout_weight=".50"
            android:onClick="clearAll"/>

    </LinearLayout>
</LinearLayout>
