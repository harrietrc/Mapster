<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_points"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.mapster.android.gui.util.customfonttextview.TypefaceTextView
            app:customTypeface="font/ColabThi.otf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:id="@+id/add_point"
            android:text="Stop Point"
            android:textSize="30sp"
            android:textColor="@color/indigo_500"
            android:layout_marginLeft="5dp"/>
        <com.mapster.android.gui.util.customfonttextview.TypefaceTextView
            app:customTypeface="font/ColabThi.otf"
            android:layout_width="0dp"
            android:layout_weight="35"
            android:layout_height="wrap_content"
            android:onClick="removeStopPoint"
            android:clickable="true"
            android:text="Remove"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:textAlignment="center"
            />
    </LinearLayout>
    <com.mapster.android.gui.util.clearableautocompletetextview.ClearableAutoCompleteTextView
        app:customTypefaceAutoComplete="font/ColabReg.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="15sp"
        android:hint="Stop Point"
        android:paddingLeft="10dp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drive"
            android:id="@+id/drive_mode"
            android:checked="true"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk"
            android:id="@+id/walk_mode"
            android:layout_marginLeft="5dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bike"
            android:id="@+id/bike_mode"
            android:layout_marginLeft="5dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transit"
            android:id="@+id/transit_mode"
            android:layout_marginLeft="5dp"/>
    </RadioGroup>
</LinearLayout>